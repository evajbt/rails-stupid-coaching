<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1 class="text-left mt-5 mb-4">Stupid Coaching</h1>

      <% if @question.present? && @answer.present? %>
        <div class="mt-5">
          <blockquote class="blockquote answer-question-blockquote">
            <p><%= @question %></p>
            <footer class="blockquote-footer"><em>You</em></footer>
          </blockquote>
        </div>

        <div class="mt-5">
          <blockquote class="blockquote answer-coach-blockquote">
            <p><strong><%= @answer %></strong></p>
            <footer class="blockquote-footer"><em>Your Coach</em></footer>
          </blockquote>
        </div>
      <% end %>

      <%= link_to "Ask another question", ask_path, class: "btn btn-secondary mt-4" %>
    </div>
  </div>
</div>
