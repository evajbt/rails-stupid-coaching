<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1 class="text-left mt-5 mb-4">Stupid Coaching</h1>

      <% if @question.present? && @answer.present? %>
        <div class="mt-5">
          <blockquote class="blockquote" style="background-color: #ffffff; border-left: 5px solid #e0e0e0; padding: 10px; margin: 10px 0;">
            <p><%= @question %></p>
            <footer class="blockquote-footer"><em>You</em></footer>
          </blockquote>
        </div>

        <div class="mt-5">
          <blockquote class="blockquote" style="background-color: #fff3cd; border-left: 5px solid #e0e0e0; padding: 10px; margin: 10px 0;">
            <p><strong><%= @answer %></strong></p>
            <footer class="blockquote-footer"><em>Your Coach</em></footer>
          </blockquote>
        </div>
      <% end %>

      <%= link_to "Ask another question", ask_path, class: "btn btn-secondary mt-4" %>
    </div>
  </div>
</div>
